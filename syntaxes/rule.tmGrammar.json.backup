{
    "scopeName": "rule.yaml",
    "patterns": [
        {
            "name": "comment.definition",
            "match": "#.*$"
        },
        {
            "contentName": "rule.definition",
            "begin": "^- rule:",
            "end": "^[\n]",
            "patterns": [
                {
                    "contentName": "rule.description",
                    "begin": "^(\\s+)desc:",
                    "end": "\\1\\w"
                },
                {
                    "contentName": "rule.condition",
                    "begin": "^(\\s+)condition:",
                    "end": "\\1\\S+"
                },
                {
                    "contentName": "rule.output",
                    "begin": "^(\\s+)output:",
                    "end": "\\1\\w"
                },
                {
                    "contentName": "rule.priority",
                    "begin": "^(\\s+)priority:",
                    "end": "\\1\\w"
                },
                {
                    "contentName": "rule.tags",
                    "begin": "^(\\s+)tags:",
                    "end": "\\1\\w"
                },
                {
                    "contentName": "rule.source",
                    "begin": "^(\\s+)source:",
                    "end": "\\1\\w"
                }
            ]
        }
    ]
}
